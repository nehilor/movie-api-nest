    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Get Hello World",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Basic endpoint to verify that the API is working"
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/",
                  "host": ["{{baseUrl}}"],
                  "path": [""]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "text",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "text/html; charset=utf-8"
                }
              ],
              "cookie": [],
              "body": "Hello World!"
            }
          ]
        }
      ],
      "description": "Endpoints to verify API status"
    },
    {
      "name": "Movies",
      "item": [
        {
          "name": "Search Movies - Enhanced Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies/search?query=batman&page_offset=1&page_size=5&order_by=Year&sort_direction=descending",
              "host": ["{{baseUrl}}"],
              "path": ["movies", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "batman",
                  "description": "Movie title to search for"
                },
                {
                  "key": "page_offset",
                  "value": "1",
                  "description": "Page offset (1-based)"
                },
                {
                  "key": "page_size",
                  "value": "5",
                  "description": "Number of results per page"
                },
                {
                  "key": "order_by",
                  "value": "Year",
                  "description": "Field to sort by: Title, Year, imdbID, Type"
                },
                {
                  "key": "sort_direction",
                  "value": "descending",
                  "description": "Sort direction: ascending, descending"
                },
                {
                  "key": "type",
                  "value": "",
                  "description": "Type: movie, series, episode (optional)",
                  "disabled": true
                },
                {
                  "key": "year",
                  "value": "",
                  "description": "Year of release (optional)",
                  "disabled": true
                }
              ]
            },
            "description": "Search movies with enhanced pagination parameters"
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/movies/search?query=batman&page_offset=1&page_size=5&order_by=Year&sort_direction=descending",
                  "host": ["{{baseUrl}}"],
                  "path": ["movies", "search"],
                  "query": [
                    {
                      "key": "query",
                      "value": "batman"
                    },
                    {
                      "key": "page_offset",
                      "value": "1"
                    },
                    {
                      "key": "page_size",
                      "value": "5"
                    },
                    {
                      "key": "order_by",
                      "value": "Year"
                    },
                    {
                      "key": "sort_direction",
                      "value": "descending"
                    }
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "cookie": [],
              "body": "{\n  \"Search\": [\n    {\n      \"Title\": \"The Batman\",\n      \"Year\": \"2022\",\n      \"imdbID\": \"tt1877830\",\n      \"Type\": \"movie\",\n      \"Poster\": \"https://m.media-amazon.com/images/M/MV5BMmU5NGJlMzAtMGNmOC00YjJjLTgyMzUtNjAyYmE4Njg5YWMyXkEyXkFqcGc@._V1_SX300.jpg\"\n    },\n    {\n      \"Title\": \"Batman v Superman: Dawn of Justice\",\n      \"Year\": \"2016\",\n      \"imdbID\": \"tt2975590\",\n      \"Type\": \"movie\",\n      \"Poster\": \"https://m.media-amazon.com/images/M/MV5BZTJkYjdmYjYtOGMyNC00ZGU1LThkY2ItYTc1OTVlMmE2YWY1XkEyXkFqcGc@._V1_SX300.jpg\"\n    }\n  ],\n  \"totalResults\": \"619\",\n  \"Response\": \"True\",\n  \"pagination\": {\n    \"page_offset\": 1,\n    \"page_size\": 5,\n    \"sort_order\": [\n      {\n        \"order_by\": \"Year\",\n        \"sort_direction\": \"descending\"\n      }\n    ]\n  }\n}"
            }
          ]
        },
        {
          "name": "Get Movie Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies/:imdbID",
              "host": ["{{baseUrl}}"],
              "path": ["movies", ":imdbID"],
              "variable": [
                {
                  "key": "imdbID",
                  "value": "tt0372784",
                  "description": "IMDb ID of the movie (e.g., tt0372784)"
                }
              ]
            },
            "description": "Get complete details of a movie by its IMDb ID using OMDb API"
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/movies/tt0372784",
                  "host": ["{{baseUrl}}"],
                  "path": ["movies", "tt0372784"]
                }
              },
              "status": "OK",
              "code": 200,
